<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>图书管理系统 </title>
    <style type="text/css">
        #aaa {
            font-size: 20px
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("图书管理系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("查询", "Search", "Home")</li>
                    <li>@Html.ActionLink("借书", "Borrow", "Home")</li>
                    <li>@Html.ActionLink("还书", "Return", "Home")</li>
                    <li>@Html.ActionLink("普通用户登录", "User", "Home")</li>
                    <li>@Html.ActionLink("管理员用户登录", "Admin", "Home")</li>
                    <li>@Html.ActionLink("管理书籍", "Manage", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 图书管理系统</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/canvas-nest.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
